<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_apk_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="2.0dip">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="0.0dip"
        android:layout_height="80dip"
        android:layout_marginTop="5.0dip"
        android:layout_weight="12.0"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <android.widget.TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="middle"
                android:maxLines="1"
                android:singleLine="true"
                android:text="archived 1"
                android:textColor="@color/black_80"
                android:textSize="14.0dip" />

            <ImageView
                android:id="@+id/iv_edit_name"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:scaleType="centerInside"
                android:src="@drawable/icon_edit_name"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <android.widget.TextView
                android:id="@+id/iv_personal_file_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/file_name"
                android:layout_marginTop="3.0dip"
                android:maxLines="1"
                android:text="2016.05.06"
                android:textColor="@color/black_54"
                android:textSize="12.0dip" />
        </RelativeLayout>

        <!-- <View
             android:id="@+id/iv_diver"
             android:layout_width="fill_parent"
             android:layout_height="1.0dip"
             android:layout_marginLeft="6.0dip"
             android:layout_marginRight="6.0dip"
             android:background="@color/black_20" />-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_contacts_item"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_contact"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/ic_contacts_black" />

                <android.widget.TextView
                    android:id="@+id/item_info_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:text="120"
                    android:textColor="@color/black_54"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_calls_item"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_call"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/ic_sms_black" />

                <android.widget.TextView
                    android:id="@+id/item_info_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:text="120"
                    android:textColor="@color/black_54"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sms_item"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_sms"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/ic_calls_balck" />

                <android.widget.TextView
                    android:id="@+id/item_info_calllog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:text="120"
                    android:textColor="@color/black_54"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>

        <!--<ImageView
            android:id="@+id/new_iv"
            android:layout_width="25.0dip"
            android:layout_height="11.0dip"
            android:layout_marginTop="-80dip"
            android:src="@drawable/group_14" />-->
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_file"
        android:layout_width="8dip"
        android:layout_height="24dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5.0dip"
        android:layout_weight="1.0"
        android:visibility="visible" />
</LinearLayout>